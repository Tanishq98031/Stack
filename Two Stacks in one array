public class TwoStack {

	// Initialize TwoStack.
    int top1;
    int top2;
    int size;
    int [] arr;
	public TwoStack(int s) {
		// Write your code here
        this.size = s;
        top1 = -1;
        top2 = size;
        arr = new int[size];
	}

	// Push in stack 1.
	public void push1(int num) {
		// Write your code here
        if(top2 - top1 > 1)
        {
            top1++;
            arr[top1] = num;
        }
	}

	// Push in stack 2.
	public void push2(int num) {
		// Write your code here
        if(top2 - top1 > 1)
        {
            top2--;
            arr[top2] = num;
        }
	}

	// Pop from stack 1 and return popped element.
	public int pop1() {
		// Write your code here
        if(top1 == -1)
        {
            return -1;
        }
        else
        {
            int element = arr[top1];
            top1--;
            return element;
        }
	}

	// Pop from stack 2 and return popped element.
	public int pop2() {
		// Write your code here
        if(top2 == size)
        {
            return -1;
        }
        else
        {
            int element = arr[top2];
            top2++;
            return element;
        }
	}
}
